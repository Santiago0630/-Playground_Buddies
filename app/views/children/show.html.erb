<div>
  <button class="button1"><%= link_to "Back", children_path %></button>
</div>

<div class="child_card custom_shadow image_and_name foto_fit">
  <%= cl_image_tag @child.photo.key %>
  <p class="child_show_name luckiest-guy-regular"><%= @child.first_name %></p>
</div>

<div class="overall_card">
    <p class="about_show_page">About <%= @parent.first_name %></p>
    <div class="age_and_gender">
            <p class="child_card_boxes"><%= @parent.age %></p>
            <p class="child_card_boxes"><%= @parent.gender %></p>
    </div>

  <p class="about_show_page">About <%= @child.first_name %></p>
    <div class="age_and_gender">
      <p class="child_card_boxes"><%= @child.age %></p>
      <p class="child_card_boxes"><%= @child.gender %></p>

      <% @child.self_characteristics.each do |characteristic| %>
        <p class="child_card_boxes_full"><%= characteristic.name %></p>
      <% end %>
    </div>
  <div>
    <p class="about_show_page">About Us </p>
    <p class="about_us" ><%= @parent.about %></p>
  </div>
</div>

<div>
  <%= button_to "Send Request", user_requests_path(@parent), class: "button2" %>
</div>
